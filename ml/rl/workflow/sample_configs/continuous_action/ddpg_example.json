{
  "training_data_path": "training_data/pendulum_training_data.json",
  "eval_data_path": "training_data/pendulum_eval.json",
  "state_norm_data_path": "training_data/state_features_norm.json",
  "action_norm_data_path": "training_data/action_norm.json",
  "model_output_path": "outputs/",
  "use_gpu": true,
  "use_all_avail_gpus": true,
  "num_nodes": 1,
  "init_method": "file:///tmp/ddpg_example.lock",
  "norm_params": {
    "output_dir": "training_data/",
    "cols_to_norm": [
      "state_features",
      "action"
    ],
    "num_samples": 1000
  },
  "epochs": 1,
  "rl": {
    "gamma": 0.99,
    "epsilon": 0,
    "target_update_rate": 0.001,
    "softmax_policy": 0
  },
  "shared_training": {
    "minibatch_size": 64,
    "final_layer_init": 0.003,
    "optimizer": "ADAM"
  },
  "actor_training": {
    "layers": [
      -1,
      128,
      64,
      -1
    ],
    "activations": [
      "relu",
      "relu",
      "tanh"
    ],
    "learning_rate": 0.0001
  },
  "critic_training": {
    "layers": [
      -1,
      128,
      64,
      -1
    ],
    "activations": [
      "relu",
      "relu",
      "linear"
    ],
    "learning_rate": 0.001,
    "l2_decay": 0.01
  }
}